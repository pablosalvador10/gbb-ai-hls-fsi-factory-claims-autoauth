{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Python: Streamlit (Frontend)",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
            "run",
            "${workspaceFolder}/app/frontend/streamlit/Home.py",
            ],
        },
        {
            "name": "Python: API (Backend)",
            "type": "python",
            "request": "launch",
            "args": [
            "run",
            "${workspaceFolder}/app/backend/app.py",
            ],
        },
        {
            "name": "Python: Debug Tests",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTEST_ADDOPTS": "--no-cov -n0 --dist no"
            }
        }
    ]
}
